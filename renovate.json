{
    "baseBranches": [
        "main"
    ],
    "configWarningReuseIssue": false,
    "dependencyDashboard": true,
    "dependencyDashboardTitle": "Renovate: Upgrade Fluentd Package Dependencies",
    "draftPR": true,
    "enabledManagers": [
        "custom.regex",
        "helm-values",
        "helmv3"
    ],
    "ignorePaths": [
        "chart/charts/**"
    ],
    "labels": [
        "fluentd",
        "renovate",
        "kind::maintenance",
        "team::Observability"
    ],
    "postUpdateOptions": [
        "helmUpdateSubChartArchives"
    ],
    "separateMajorMinor": false,
    "packageRules": [
        {
            "matchDatasources": [
                "docker",
                "helm"
            ],
            "groupName": "Ironbank",
            "postUpgradeTasks": {
                "commands": [
                    "regenerate-helm-docs",
                    "bump-changelog '{{#each upgrades}}- {{depName}} {{currentVersion}} -> {{newVersion}}\\n{{/each}}'"
                ],
                "executionMode": "update",
                "fileFilters": [
                    "README.md",
                    "CHANGELOG.md"
                ]
            }
        }
    ],
    "customManagers": [
        {
            "customType": "regex",
            "description": "Update app version chart annotations",
            "managerFilePatterns": [
                "/^chart/Chart\\.yaml$/"
            ],
            "matchStrings": [
                "- Fluentd:\\s+(?<currentValue>.+)",
                "appVersion:\\s+(?<currentValue>.+)"
            ],
            "depNameTemplate": "registry1.dso.mil/ironbank/opensource/fluentd/fluentd-kubernetes-daemonset",
            "datasourceTemplate": "docker"
        },
        {
            "customType": "regex",
            "description": "Update docker image references",
            "managerFilePatterns": [
                "/^chart/Chart\\.yaml$/"
            ],
            "matchStrings": [
                "image:[^\\S\\r\\n]+(?<depName>.+):(?<currentValue>.+)"
            ],
            "datasourceTemplate": "docker"
        },
        {
            "customType": "regex",
            "description": "Update chart version",
            "managerFilePatterns": [
                "/^chart/Chart\\.yaml$/"
            ],
            "matchStrings": [
                "version:\\s+(?<currentValue>.+)-bb\\.\\d+"
            ],
            "autoReplaceStringTemplate": "version: {{newValue}}-bb.0",
            "depNameTemplate": "fluentd",
            "datasourceTemplate": "helm",
            "registryUrlTemplate": "https://fluent.github.io/helm-charts"
        }
    ]
}
